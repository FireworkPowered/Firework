{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "firework.cli.config.LumaConfig",
    "properties": {
        "metadata": {
            "$ref": "#/$defs/firework.cli.config.Metadata"
        },
        "config": {
            "$ref": "#/$defs/firework.cli.config.Config"
        },
        "modules": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/$defs/firework.cli.config.SingleModule"
                    },
                    {
                        "$ref": "#/$defs/firework.cli.config.MultiModule"
                    }
                ]
            }
        },
        "storage": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "components": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/firework.cli.config.Component"
            }
        },
        "hooks": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/firework.cli.config.Hook"
            }
        }
    },
    "required": [
        "metadata"
    ],
    "$defs": {
        "firework.cli.config.Metadata": {
            "type": "object",
            "title": "firework.cli.config.Metadata",
            "properties": {
                "version": {
                    "type": "string",
                    "default": "0.1"
                }
            }
        },
        "firework.cli.config.Config": {
            "type": "object",
            "title": "firework.cli.config.Config",
            "properties": {
                "endpoints": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "format": {
                    "type": "object",
                    "additionalProperties": {}
                }
            }
        },
        "firework.cli.config.SingleModule": {
            "type": "object",
            "title": "firework.cli.config.SingleModule",
            "properties": {
                "endpoint": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "single"
                    ],
                    "default": "single"
                }
            },
            "required": [
                "endpoint"
            ]
        },
        "firework.cli.config.MultiModule": {
            "type": "object",
            "title": "firework.cli.config.MultiModule",
            "properties": {
                "endpoint": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "multi"
                    ]
                },
                "exclude": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "endpoint",
                "type"
            ]
        },
        "firework.cli.config.Component": {
            "type": "object",
            "title": "firework.cli.config.Component",
            "properties": {
                "endpoint": {
                    "type": "string"
                },
                "args": {
                    "type": "object",
                    "additionalProperties": {}
                }
            },
            "required": [
                "endpoint"
            ]
        },
        "firework.cli.config.Hook": {
            "type": "object",
            "title": "firework.cli.config.Hook",
            "properties": {
                "endpoint": {
                    "type": "string"
                },
                "target": {
                    "type": "string"
                }
            },
            "required": [
                "endpoint",
                "target"
            ]
        }
    }
}